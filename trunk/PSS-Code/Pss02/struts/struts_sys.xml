<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC   
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"  
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="sys" namespace="/sys" extends="abs">
		<action name="*_*" class="com.ttl.dit.web.action.system.{2}Action"
			method="{1}">
			<result type="freemarker">/ftl/sys/{2}/{1}_{2}.html</result>
			<result name="input" type="freemarker">
				/ftl/sys/{2}/{1}_{2}.html
			</result>
		</action>
	</package>
		
	<package name="json" namespace="/json" extends="json-default">
		<action name="*Of*" class="com.pss.web.action.system.{2}Action"
			method="{1}">
			<interceptor-ref name="params" />
			<interceptor-ref name="json" />
			<result type="json" />
		</action>
	</package>
	
	<package name="default" namespace="/" extends="abs">
		<action name="login_index" class="com.pss.web.action.system.LoginAction"
			method="index">
			<result type="freemarker">/ftl/common/main.html</result>
		</action>
	</package>

	<package name="ajax" namespace="/ajax" extends="json-default">
		<action name="getValidationCode" class="com.pss.web.action.system.ValidationCodeAction">
			<result type="stream">
				<param name="contentType">image/jpeg</param>
				<param name="inputName">inputStream</param>
			</result>
		</action>
	</package>
</struts>
