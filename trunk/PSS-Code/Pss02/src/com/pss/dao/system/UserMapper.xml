<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pss.dao.system.UserMapper">
	<resultMap type="com.pss.domain.model.entity.sys.User"
		id="UserMapper">
		<id property="userId" column="user_id" />
		<result property="tenant" column="tenant" />
		<result property="userName" column="user_name" />
		<result property="userPassword" column="user_password" />
		<result property="lastLoginTime" column="last_login_time" />
		<result property="status" column="status" />
		<result property="role.roleId" column="role_id" />
	</resultMap>
	<insert id="insert" parameterType="com.pss.domain.model.entity.sys.User">
	    insert into user(user_id,tenant,user_name,user_password,last_login_time,status,role_id) values(#{userId},#{tenant},#{userName},#{userPassword},#{lastLoginTime},#{status},#{role.roleId});
	</insert>
	<select id="query" parameterType="com.pss.domain.model.entity.sys.User" resultMap = "UserMapper">
	    select * from user where user_name = #{userName} and tenant = #{tenant}
	</select>
	<update id="updateLastLoginTime" parameterType="com.pss.domain.model.entity.sys.User">
	    update user set last_login_time = #{lastLoginTime} where user_id = #{userId}
	</update>
</mapper>